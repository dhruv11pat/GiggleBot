<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Favorite Jokes</title>
    <style>
        html, body {
          height: 100%;
          margin: 0;
        }
        body {
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #fef6e4, #fcd5ce);
            padding: 40px;
            color: #333;
            transition: background 0.5s ease-in-out;
        }
        h1 {
            text-align: center;
            color: #ef6666;
            margin-bottom: 30px;
        }
        .joke-list {
            max-width: 700px;
            margin: 0 auto;
        }
        .joke-card {
             background: white;
             border-radius: 12px;
             padding: 15px 20px;
             margin-bottom: 15px;
             box-shadow: 0 2px 12px rgba(0,0,0,0.1);
             display: flex;
             justify-content: space-between;
             align-items: center;
        }
        .joke-text {
            flex-grow: 1;
            margin-right: 10px;
        }
        .remove-btn {
            background: linear-gradient(135deg, #fce4e4, #f8b3b3);
            border: none;
            color: #b30000;
            font-size: 10px;
            font-weight: bold;
            padding: 2px 5px;
            border-radius: 50%;
            cursor: pointer;
            transition: 0.2s ease-in-out;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

        .remove-btn:hover {
            background: linear-gradient(135deg, #f8b3b3, #f98e8e);
            transform: scale(1.1);
         }
        .back-btn {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background: #ef7676;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: bold;
        }
        .back-btn:hover {
            background:#ef6666;
        }
        .empty-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 200px; /* or full height if needed */
            animation: fadeIn 0.5s ease-in;
        }
        .empty-wrapper p {
            font-size: 1.2rem;
            color: #666;
            text-align: center;
        }
        #emptyMsg{
            font-size: 4rex;
            font-weight: 600;
            color: black;
        }
    </style>
</head>
<body>
    <h1> Your Favourite Jokes</h1>
    <div class="joke-list" id="jokeList">
        <% if (jokes.length === 0) { %>
            <div class="empty-wrapper">
                <p id="emptyMsg">No favourite jokes üò¢</p>
            </div>
        <% } else { %>
            <% jokes.forEach(j => { %>
                <div class="joke-card">
                    <span class="joke-text"><%= j.joke %></span>
                    <button class="remove-btn" data-joke="<%= j.joke %>">‚àí</button>
                </div>
            <% }) %>
        <% } %>
    </div>
    <div style="text-align:center;">
        <a href="/joke" class="back-btn">‚Üê Back to Home</a>
    </div>


<script>
        document.querySelectorAll(".remove-btn").forEach(btn => {
            btn.addEventListener("click", async () => {
                const joke = btn.getAttribute("data-joke");
    
                const res = await fetch("/remove-favorite", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({ joke })
                });
    
                if (res.ok) {
                btn.parentElement.remove(); // Remove the joke from UI
                const jokeList = document.getElementById("jokeList");
                if (jokeList.children.length === 0) {
                const wrapper = document.createElement("div");
                wrapper.className = "empty-wrapper";

                const msg = document.createElement("p");
                msg.className = "empty-msg";
                msg.textContent = "No favorite jokes yet üò¢";

                wrapper.appendChild(msg);
                jokeList.appendChild(wrapper);
                }

                } else {
                    alert("Failed to remove joke.");
                }
            });
        });
    </script>
    
</body>
</html>
